<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0">
    <meta name="keywords" content="Auto-Spear-Parts" />
    <meta name="description" content="Auto-Spear-Parts">
    <meta name="author" content="Auto-Spear-Parts">
    <title>@ViewData["Title"] - AdminPanel</title>
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/icons/favicon.png">
    <!-- Css Styles -->
    <link rel="stylesheet" href="~/lib/bootstrap4/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/admin/fonts/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/admin/fonts/googlefonts/css/googlefonts.css">
    <link rel="stylesheet" href="~/admin/css/admin.css" asp-append-version="true"/>
</head>

<body class="bg-dark">
<div class="sufee-login d-flex align-content-center flex-wrap">
    <div class="container">
        <div class="login-content">
            <div class="login-logo">
                <a asp-area="Admin" asp-controller="Home" asp-action="Index">
                    <img class="align-content" src="~/admin/images/earabapazarilogo.jpg" alt="">
                </a>
            </div>
            @RenderBody()
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap4/dist/js/bootstrap.bundle.min.js"></script>
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
<script src="~/lib/sweetalert2/sweetalert2.all.min.js"></script>
<script src="~/admin/js/admin.js" asp-append-version="true"></script>
<script src="~/js/common/alllayouts.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
